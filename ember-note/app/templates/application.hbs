<div class="container">
  <div class="row">
    <div class="col-md-2">
      Welcome to EmberNote
    </div>
    <div class="col-md-10">
      {{#if user}}
        <p>Hello, {{user.name}}</p>
      {{/if}}
      {{#unless user}}
        <p>
          {{#link-to 'register'}}register{{/link-to}}
          {{#link-to 'login'}}login{{/link-to}}
        </p>
      {{/unless}}
    </div>
  </div>
  <div class="row">
    <div>{{outlet}}</div>
  </div>
</div>
